extends layout

block content
    main
        h1 Upload Video
        form(action='/dashboard/add', method='post')
            label(for='name') Video Name:
            input(type='text', name='name', id='name', required)
            br
            label(for='url') Video URL:
            input(type='text', name='url', id='url', required)
            br
            button(type='submit') Add Video